<Window x:Class="BLFClient.AdminChangePassw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLFClient"
        mc:Ignorable="d"
        Title="Change password" Height="188" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Old password"/>
            <PasswordBox Name="OldPassw" Margin="4,4,4,4" />
            <Label Content="New password"/>
            <PasswordBox Name="NewPassw" Margin="4,4,4,4"/>
            <Label Content="Confirm new password"/>
            <PasswordBox Name="NewPasswConfirm" Margin="4,4,4,4"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Ok" Click="Button_Click_OK" Margin="4,4,4,4"/>
            <Button Content="Cancel" Click="Button_Click_Cancel" Margin="4,4,4,4"/>
        </StackPanel>
    </Grid>
</Window>
