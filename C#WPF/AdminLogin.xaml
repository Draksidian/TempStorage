<Window x:Class="BLFClient.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLFClient"
        mc:Ignorable="d"
        Title="Login" Height="110" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Password" Grid.Column="0" Grid.Row="0" />
        <PasswordBox Name="UserPassw" Grid.Column="0" Grid.Row="1" Height="25" Margin="4,4,4,4"/>
        <Button Content="Ok" Grid.Column="1" Grid.Row="0" Click="Button_Click_OK" Margin="4,8,8,4"/>
        <Button Content="Cancel" Grid.Column="1" Grid.Row="1" Click="Button_Click_Cancel" Margin="4,4,8,8"/>
    </Grid>
</Window>
